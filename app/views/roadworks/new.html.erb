<div class="pt-30 container">
  <h1 class="text-center">Nouveau projet</h1>
  <div class="row justify-content-center">
    <div class="col-6">
      <%= simple_form_for(@roadwork) do |f| %>
        <%= f.error_notification %>
        <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

        <div class="form-inputs">
          <%= f.input :name, label:"Nom du projet" %>
          <%= f.input :banner_url, label:"Photos d'illustration" %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, value:"Poster votre projet", class: "btn btn-flat" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
